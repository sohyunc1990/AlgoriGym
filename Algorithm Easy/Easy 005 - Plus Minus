function plusMinus(arr) {
    let result=[0, 0, 0];
        for(let i=0; i<arr.length; i++){
            if(arr[i]===0){
            result[2]++
            } else {
            arr[i]>0? result[0]++ : result[1]++
            };
        };
    for(let j=0; j<result.length; j++){
    console.log(result[j]=result[j]/arr.length)
    }
}